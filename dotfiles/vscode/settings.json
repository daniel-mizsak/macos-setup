{
  // Base settings
  // Editor
  "editor.accessibilitySupport": "off",
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "MesloLGS Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.55,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 0.8,
  // Files
  "files.associations": {
    "**/ansible/**/*.yml": "ansible",
    "**/tasks/*.yml": "ansible",
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/__pycache__": true,
    "**/._*": true,
    "**/.coverage": true,
    "**/.idea": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.tox": true,
    "**/.venv": true,
    "**/*.egg-info": true,
    "**/coverage.xml": true,
    "**/htmlcov": true,
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Git
  "git.allowForcePush": true,
  "git.confirmForcePush": false,
  "git.confirmSync": false,
  "git.replaceTagsWhenPull": true,
  "git.suggestSmartCommit": false,
  // Search
  "search.exclude": {
    "**/.venv": true,
  },
  // Telemetry
  "telemetry.telemetryLevel": "off",
  // Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,
  // Window
  "window.zoomLevel": -0.35,
  // Workbench
  "workbench.colorTheme": "Default Dark+",
  "workbench.editor.wrapTabs": true,
  "workbench.enableExperiments": false,
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultSettings": true,
  "workbench.sideBar.location": "left",
  // Extensions
  /*
    .NET Install Tool
    ? .NET MAUI
    1Password
    Ansible
    autoDocstring - Python Docstring Generator
    Better Comments
    C#
    C# Dev Kit
    Code Runner
    Code Spell Checker
    CodeSnap
    CSharpier - Code formatter
    Dev Containers
    Docker
    Even Better TOML
    GistPad
    Github Actions
    GitHub Copilot
    GitHub Copilot Chat
    GitLens â€” Git supercharged
    Go
    indent-rainbow
    IntelliCode for C# Dev Kit
    Jupyter
    Jupyter Cell Tags
    Jupyter Keymap
    Jupyter Notebook Renderers
    Jupyter Slide Show
    Live Share
    Mypy Type Checker
    Nix IDE
    PowerShell
    psioniq File Header
    Pylance
    Python
    Python Debugger
    Rainbow CSV
    Remote - SSH
    Remote - SSH: Editing Configuration Files
    Remote Explorer
    Ruff
    SQLite
    Vim
    ? VSCode Neovim
    vscode-pdf
    WSL
    YAML
    */
  // .NET Install Tool
  "dotnetAcquisitionExtension.enableTelemetry": false,
  // Ansible
  "[ansible]": {
    "editor.defaultFormatter": "redhat.ansible",
    "editor.tabSize": 2,
  },
  "redhat.telemetry.enabled": false,
  // C#
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode",
  },
  "csharp.experimental.debug.hotReload": true,
  // Code Runner
  "code-runner.executorMap": {
    "csharp": "cd $dir && dotnet run",
    "python": "$pythonPath $fullFileName",
  },
  "code-runner.runInTerminal": true,
  "code-runner.ignoreSelection": true,
  // Code Spell Checker
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.showStatus": false,
  // CodeSnap
  "codesnap.containerPadding": "1em",
  "codesnap.showWindowControls": false,
  // Even Better TOML
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
  },
  "evenBetterToml.formatter.indentEntries": true,
  "evenBetterToml.formatter.indentString": "  ",
  "evenBetterToml.formatter.indentTables": true,
  // GitHub Actions
  "[github-actions-workflow]": {
    "editor.tabSize": 2,
  },
  // GitHub Copilot
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "markdown": true,
  },
  // indent-rainbow
  "indentRainbow.includedLanguages": [
    "ansible",
    "json",
    "jsonc",
    "yaml",
    "yml",
  ],
  // JSON
  "[json]": {
    "editor.tabSize": 2,
  },
  "[jsonc]": {
    "editor.tabSize": 2,
  },
  // Jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.experiments.enabled": false,
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  // Lua
  "[lua]": {
    "editor.tabSize": 2,
  },
  // Mypy Type Checker
  "mypy-type-checker.args": [
    "--ignore-missing-imports",
    "--pretty",
    "--show-column-numbers",
    "--show-error-context",
    "--strict",
    "--warn-unreachable",
    "--warn-unused-ignores",
  ],
  "mypy-type-checker.path": [
    "${workspaceFolder}/.venv/bin/mypy",
  ],
  // Nix IDE
  "nix.formatterPath": "nixpkgs-fmt",
  // PowerShell
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": true,
  },
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.avoidSemicolonsAsLineTerminators": true,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.useConstantStrings": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  // psioniq File Header
  "psi-header.config": {
    "author": "Daniel Mizsak",
    "authorEmail": "info@pythonvilag.hu",
    "blankLinesAfter": 1,
    "forceToTop": true,
  },
  "psi-header.lang-config": [
    {
      "language": "python",
      "begin": "\"\"\"",
      "end": "\"\"\"",
    }
  ],
  "psi-header.templates": [
    {
      "language": "python",
      "template": [
        "Short description and source of base code.",
        "",
        "@author \"<<author>>\" <<<authoremail>>>",
      ]
    }
  ],
  // Python
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.sortMembers": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.defaultFoldingRangeProvider": "charliermarsh.ruff",
    "editor.rulers": [
      80,
      120,
    ],
    "editor.tabSize": 4,
  },
  "python.analysis.typeCheckingMode": "off",
  "python.experiments.enabled": false,
  // Ruff
  "ruff.fixAll": false,
  "ruff.lint.args": [
    "--line-length",
    "120",
  ],
  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
  },
  // Remote - SSH
  "remote.SSH.remotePlatform": {
    "*": "linux",
  },
}
